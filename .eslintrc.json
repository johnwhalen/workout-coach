{
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "no-console": "off"
  },
  "ignorePatterns": [
    "node_modules/**",
    ".next/**",
    "coverage/**",
    "playwright-report/**",
    "test-results/**"
  ]
}
